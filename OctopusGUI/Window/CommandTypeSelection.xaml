<Window x:Class="OctopusGUI.CommandTypeSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Command Type Selection" Height="100" Width="300" WindowStyle="None">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <ComboBox Height="23" HorizontalAlignment="Center"  Name="cmbCommandType" VerticalAlignment="Center" Width="120" Margin="5">
                <ComboBoxItem IsSelected="True">Remote</ComboBoxItem>
                <ComboBoxItem>Local</ComboBoxItem>
                <ComboBoxItem>Copy</ComboBoxItem>
                <ComboBoxItem>LinuxSSH</ComboBoxItem>
            </ComboBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Height="23" HorizontalAlignment="Center"  Name="btnOK" VerticalAlignment="Center" Width="75" Margin="5,0,5,0" Click="btnOK_Click" />
                <Button Content="Cancel" Height="23" HorizontalAlignment="Center"  Name="btnCancel" VerticalAlignment="Center" Width="75" Click="btnCancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
